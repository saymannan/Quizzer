<html>
    <head>
        <meta charset="utf-8"> 
        <link rel= 'stylesheet' href='bootstrap/css/bootstrap.min.css'  type='text/css'/>
        <script src="all-ro.js"></script>
    </head>
    <body background="img/noisy_net.png">
        <div class="container">
        <form  action="/show_quiz"; role="form" method="post">
            <div class="row col-lg-12" style="margin-bottom:20px"> 
                <div class="col-lg-4" style="background-color:#1c1c1c;color:white;">
                    <h3 >
                        Welcome <%= title%>
                    </h3>
                </div>
                <div class="col-lg-4">
                </div>
                <div class="col-lg-4">
                </div>
            </div>
            <div class="row col-lg-12" style="margin-bottom:10px"> 
                <div class="col-lg-2">
                </div>
                <div class="col-lg-10" style="background-color:#1c1c1c;color:white;font-size:22px">
                        Section Name : <span class="badge" style="font-size:22px;color:green"> <%= name %> </span>
                </div>
            </div>
            <div class="row col-lg-12" style="margin-bottom:10px"> 
                <div class="col-lg-2">
                </div>
                <div class="col-lg-10" style="background-color:#1c1c1c;color:white;font-size:22px">
                        Section Information : <span class="badge" style="font-size:22px;color:green"> <%= rule %> </span>
                </div>
            </div>
            <div class="row col-lg-12" style="margin-bottom:10px"> 
                <div class="col-lg-2">
                </div>
                <div class="col-lg-10" style="background-color:#1c1c1c;color:white;font-size:22px">
                        Number Of Questions : <span class="badge" style="font-size:22px;color:green"> <%= qc %> </span>
                </div>
            </div>
            <div class="row col-lg-12" style="margin-top:20px">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <button type="submit" class="btn btn-success" style="width:100%;height:42px;"> Next </button>
                </div>
                <div class="col-lg-4"></div>
            </div>
        </form>
        </div>
    </body>
</html>